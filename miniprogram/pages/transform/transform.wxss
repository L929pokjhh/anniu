/* transform.wxss */
.container {
  padding: 20rpx;
  background-color: #f8f9fa;
  min-height: 100vh;
  padding-bottom: 100rpx;
}

/* 搜索框样式 */
.search-section {
  margin-bottom: 30rpx;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 50rpx;
  padding: 20rpx 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.search-icon {
  font-size: 32rpx;
  color: #999;
  margin-right: 20rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
}

.clear-icon {
  font-size: 24rpx;
  color: #ccc;
  margin-left: 20rpx;
  padding: 10rpx;
}

/* 通用区块样式 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 0 10rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #2c3e50;
}

.more-link {
  font-size: 28rpx;
  color: #87CEEB;
  font-weight: 500;
}

/* 最新消息样式 */
.news-section {
  margin-bottom: 40rpx;
}

.news-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.news-card {
  position: relative;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
}

.news-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.1);
}

.news-image {
  width: 100%;
  height: 400rpx;
  display: block;
}

.news-tag {
  position: absolute;
  bottom: 20rpx;
  right: 20rpx;
  background: rgba(0, 0, 0, 0.7);
  color: #ffffff;
  padding: 10rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  font-weight: bold;
  backdrop-filter: blur(10rpx);
}

/* 历史成果展示样式 */
.achievement-section {
  margin-bottom: 40rpx;
}

.achievement-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.achievement-card {
  display: flex;
  background-color: #ffffff;
  border-radius: 20rpx;
  overflow: hidden;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.achievement-card:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.08);
}

.achievement-image {
  width: 200rpx;
  height: 160rpx;
  flex-shrink: 0;
  display: block;
}

.achievement-content {
  flex: 1;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.achievement-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
  margin-bottom: 10rpx;
  line-height: 1.3;
}

.achievement-description {
  font-size: 26rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 15rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
  text-overflow: ellipsis;
}

.achievement-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
}

.tag {
  background-color: #e3f2fd;
  color: #1976d2;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
}

/* 底部占位 */
.bottom-placeholder {
  height: 40rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .achievement-image {
    width: 160rpx;
    height: 120rpx;
  }
  
  .achievement-content {
    padding: 15rpx;
  }
  
  .achievement-title {
    font-size: 28rpx;
  }
  
  .achievement-description {
    font-size: 24rpx;
  }
}

@media screen and (min-width: 768px) {
  .container {
    max-width: 750rpx;
    margin: 0 auto;
  }
  
  .news-list {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 20rpx;
  }
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.news-card,
.achievement-card {
  animation: fadeInUp 0.6s ease-out;
}

.news-card:nth-child(2) {
  animation-delay: 0.1s;
}

.achievement-card:nth-child(2) {
  animation-delay: 0.2s;
}

/* 加载状态优化 */
.news-image,
.achievement-image {
  background-color: #f5f5f5;
  transition: opacity 0.3s ease;
}

.news-image[src=""],
.achievement-image[src=""] {
  opacity: 0.5;
}
